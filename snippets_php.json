	"Ted's try catch": {
		"prefix": "try",
		"body": [
			"try {",
			"\t${3:// ...}",
			"} catch (${1:Exception} ${2:\\$e}) {",
			"\t${4:// ...}",
			"}"
		],
		"description": "try catch"
	},
	"Ted's throw": {
		"prefix": "thr",
		"body": [
			"throw new Exception('$1', ${2:1});"
		],
		"description": "throw new Exception"
	}
}
